{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": false,    
    "outDir": "dist",
    "baseUrl": ".",
    "esModuleInterop": true,
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "./electron.ts",
    "./src-electron/**/*",
    "./src-electron/preload/**/*"
  ]
}